<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:background="@android:color/white"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/kf_wake_notify_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kf_wake_notify_small_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/kf_wake_notify_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text=""
            android:textColor="#333333"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/kf_wake_notify_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kf_wake_notify_title_layout"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="测试通知"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/kf_wake_notify_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kf_wake_notify_title"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="测试通知内容"
        android:textColor="#666666"
        android:textSize="12sp"/>
</RelativeLayout>